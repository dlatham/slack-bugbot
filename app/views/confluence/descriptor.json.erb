{
 "name": "Roadster Product",
 "description": "Roadmap Atlassian Connect add-on",
 "key": "connect-add-on-roadster-roadmap",
 "baseUrl": "<%= request.base_url + '/confluence' %>",
 "vendor": {
   "name": "Roadster",
   "url": "https://roadster.com"
 },
 "authentication": {
   "type": "jwt"
 },
 "lifecycle": {
  "installed": "/installed",
  "uninstalled": "/uninstalled"
  },
 "modules": {
   "dynamicContentMacros": [
     {
       "url": "/list/{boardid}",
       "description": {
         "value": "Display Roadster's product roadmap in Confluence"
       },
       "icon": {
         "width": 80,
         "height": 80,
         "url": "<%= image_path('logo_300x300.png') %>"
       },
       "parameters": [
         {
           "identifier": "boardid",
           "name": {
             "value": "Board ID"
           },
           "description": {
             "value": "The board ID from trello"
           },
           "type": "string",
           "required": true
         }
       ],
       "output-type": "block",
       "name": {
         "value": "Roadster Trello"
       },
       "key": "roadster-trello",
       "featured": true
     },
     {
       "url": "/backlog/{listid}?customfieldid={customfieldid}",
       "description": {
         "value": "Display a Roadster project list for voting"
       },
       "icon": {
         "width": 80,
         "height": 80,
         "url": "<%= image_path('logo_300x300.png') %>"
       },
       "parameters": [
         {
           "identifier": "listid",
           "name": {
             "value": "List ID"
           },
           "description": {
             "value": "The list ID from trello"
           },
           "type": "string",
           "required": true
         },
         {
           "identifier": "customfieldid",
           "name": {
             "value": "Custom Field ID"
           },
           "description": {
             "value": "The ID of the custom field where the vote is stored"
           },
           "type": "string",
           "required": true
         }
       ],
       "output-type": "block",
       "name": {
         "value": "Roadster Trello Ballot"
       },
       "key": "roadster-trello-ballot",
       "featured": true
     },{
       "url": "/new/?idList={idList}",
       "description": {
         "value": "Add a new item form for posting to our Trello."
       },
       "icon": {
         "width": 80,
         "height": 80,
         "url": "<%= image_path('logo_300x300.png') %>"
       },
       "parameters": [
         {
           "identifier": "idList",
           "name": {
             "value": "The list ID to post to."
           },
           "description": {
             "value": "Must be an active list ID on a Roadster Trello board."
           },
           "type": "string",
           "required": true
         }
       ],
       "output-type": "block",
       "name": {
         "value": "Roadster New Trello Card"
       },
       "key": "roadster-trello-new",
       "featured": true
     },{
       "url": "/poll/{pollname}?active={active}&open_submit={open_submit}&expires={expires}",
       "description": {
         "value": "Create a Roadster poll within a confluence page"
       },
       "icon": {
         "width": 80,
         "height": 80,
         "url": "<%= image_path('logo_300x300.png') %>"
       },
       "parameters": [
         {
           "identifier": "pollname",
           "name": {
             "value": "Poll Name"
           },
           "description": {
             "value": "Please only use text"
           },
           "type": "string",
           "required": true
         },{
           "identifier": "active",
           "name": {
             "value": "Active"
           },
           "description": {
             "value": "true = Poll is active, false = Poll is inactive"
           },
           "type": "boolean",
           "required": true
         },{
           "identifier": "open_submit",
           "name": {
             "value": "Open Submit"
           },
           "description": {
             "value": "Not currently used"
           },
           "type": "boolean",
           "required": false
         },{
           "identifier": "expires",
           "name": {
             "value": "Expiration"
           },
           "description": {
             "value": "YYYY-MM-DD format"
           },
           "type": "string",
           "required": false
         }
       ],
       "output-type": "block",
       "name": {
         "value": "Roadster Poll"
       },
       "key": "roadster-poll",
       "featured": true
     },{
       "url": "/insecure_referral",
       "description": {
         "value": "A helper to generate insecure referral URLs"
       },
       "icon": {
         "width": 80,
         "height": 80,
         "url": "<%= image_path('logo_300x300.png') %>"
       },
       "output-type": "block",
       "name": {
         "value": "Insecure Referral URL"
       },
       "key": "roadster-insecure-referral",
       "featured": true
     },
     {
       "url": "/encrypted_file",
       "description": {
         "value": "A helper to decrypt GPG files"
       },
       "icon": {
         "width": 80,
         "height": 80,
         "url": "<%= image_path('logo_300x300.png') %>"
       },
       "output-type": "block",
       "name": {
         "value": "GPG Decrypt"
       },
       "key": "roadster-gpg-decrypt",
       "featured": false
     }
   ]
 },
 "apiVersion": 3
}