<script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script src="//aui-cdn.atlassian.com/aui-adg/6.0.9/js/aui.min.js"></script>
<link rel="stylesheet" href="//aui-cdn.atlassian.com/aui-adg/6.0.9/css/aui.min.css" media="all">
<script src="<%= ENV['CONFLUENCE_URL'] %>/wiki/atlassian-connect/all.js"></script>

<section id="content" class="ac-content">
<%= form_tag({controller: "confluence", action: "render_insecure_referral", method: "post"}, {:class => 'aui'}) do %>
	<div class="field-group">
		<label for="base_url">Base URL<span class="aui-icon icon-required"> required</span></label>
    	<input class="text long-field" type="text" id="base_url" name="base_url" title="base_url" placeholder="https://express.longotoyota.com">
    	<div class="description">The base URL of the dealer's express store</div>
    </div>
    <div class="field-group">
		<label for="new_used">Type<span class="aui-icon icon-required"> required</span></label>
    	<input type="radio" id="new_used" name="new_used" value="new" checked="true"> New
        <input type="radio" id="new_used" name="new_used" value="used"> Used
    	<div class="description">Generate a URL for a new or used vehicle</div>
    </div>
    <div class="field-group">
		<label for="vin">VIN<span class="aui-icon icon-required"> required</span></label>
    	<input class="text long-field" type="text" id="vin" name="vin" title="vin" placeholder="5YFBURHE7KP928074">
    	<div class="description">VIN of the VDP to link to (must be live on dealer's ES)</div>
    </div>
    <fieldset class="group">
        <div class="field-group">
           <label for="custid">Customer ID</label>
            <input class="text long-field" type="text" id="custid" name="custid" title="custid" placeholder="12345">
            <div class="description">An optional external customer ID sometimes used to reference lead source, etc.</div>
        </div>
        <div class="field-group">
    	   <label for="fname">First Name<span class="aui-icon icon-required"> required</span></label>
            <input class="text long-field" type="text" id="fname" name="fname" title="fname" placeholder="Judy">
        </div>
        <div class="field-group">
    	   <label for="lname">Last Name<span class="aui-icon icon-required"> required</span></label>
            <input class="text long-field" type="text" id="lname" name="lname" title="lname" placeholder="Roadster">
        </div>
        <div class="field-group">
           <label for="lname">Phone</label>
            <input class="text long-field" type="text" id="phone" name="phone" title="phone" placeholder="8337623783">
        </div>
	</fieldset>
    <div class="field-group">
        <label for="email">Email<span class="aui-icon icon-required"> required</span></label>
        <input class="text long-field" type="text" id="email" name="email" title="email" placeholder="judy.roadster@roadster.com">
    </div>
    <div class="field-group">
        <label for="crm">CRM</label>
        <select class="select" id="crm" name="crm" title="crm">
            <option selected>None</option>
            <option value="elead">eLead</option>
            <option value="vinsolutions">VinSolutions</option>
        </select>
        <div class="description">Optional CRM to generate links for their email templates</div>
    </div>
    <div class="field-group">
        <button class="aui-button aui-button-primary" id="button-spin-1">Generate URLs</button>
    </div>
<% end %>
</section>