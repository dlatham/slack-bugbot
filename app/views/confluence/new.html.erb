<script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script src="//aui-cdn.atlassian.com/aui-adg/6.0.9/js/aui.min.js"></script>
<link rel="stylesheet" href="//aui-cdn.atlassian.com/aui-adg/6.0.9/css/aui.min.css" media="all">
<script src="<%= ENV['CONFLUENCE_URL'] %>/wiki/atlassian-connect/all.js"></script>

<section id="content" class="ac-content">
<form class="aui" action="/confluence/backlog/create" method="post">
	<div class="field-group">
		<label for="feature-name">Feature Request Name<span class="aui-icon icon-required"> required</span></label>
    	<input class="text" type="text" id="feature-name" name="feature-name" title="feature-name" placeholder="Feature name...">
    	<div class="description">A descriptive name of the product feature</div>
    </div>
    <div class="field-group">
		<label for="textarea-id">Description<span class="aui-icon icon-required"> required</span></label>
    	<textarea class="textarea" name="comment" id="textarea-id" placeholder="Your comment here..."></textarea>
    	<div class="description">Provide some specifics to what the feature would accomplish</div>
    </div>
    <div class="field-group">
		<label for="dealerships-request">Requested by Dealership(s)</label>
    	<input class="text" type="text" id="deaerships-request" name="dealerships-request" title="dealerships-request" placeholder="John's Subaru, Honda of Southern Kentucky">
    	<div class="description">Names of specific dealerships that have requested this feature, if any. If multiple, add all the names separated by commas.</div>
    </div>
    <fieldset class="group">
    	<legend><span>Is this request impacting a sales or retention opportunity?</span></legend>
    		<div class="checkbox">
        		<input class="checkbox" type="checkbox" name="checkBoxOne" id="checkBoxOne">
        		<label for="checkBoxOne">Sales opportunity requirement</label>
    		</div>                                
    		<div class="checkbox">
        		<input class="checkbox" type="checkbox" name="checkBoxTwo" id="checkBoxTwo">
        		<label for="checkBoxTwo">Retention risk requirement</label>
    		</div>                                                                
	</fieldset>
</form>
</section>