<script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script src="//aui-cdn.atlassian.com/aui-adg/6.0.9/js/aui.min.js"></script>
<link rel="stylesheet" href="//aui-cdn.atlassian.com/aui-adg/6.0.9/css/aui.min.css" media="all">
<link rel="stylesheet" href="//aui-cdn.atlassian.com/aui-adg/6.0.9/css/aui-experimental.min.css" media="all">
<script src="//aui-cdn.atlassian.com/aui-adg/6.0.9/js/aui-experimental.min.js"></script>
<script src="https://connect-cdn.atl-paas.net/all.js"></script>


<section id="content" class="ac-content">
<% flash.each do |key, value| %>
<div class="aui-message aui-message-<%= key %> fadeout">
    <p class="title">
        <strong><%= key %></strong>
    </p>
    <p><%= value %></p>
</div>
<% end %>

<form method="POST" action="/confluence/encrypted_file" class="aui" enctype="multipart/form-data">
	<fieldset>
        <legend><span>File upload</span></legend>
        <div class="field-group">
            <label for="file-upload-example">Upload
                file</label>
            <input class="upfile" type="file" id="upload[file]" name="upload[file]">
        </div>

        <div class="buttons-container">
	        <div class="buttons">
	        	<input type="hidden" name="jwt" id="jwt" value="<%= @jwt %>" />
	            <input class="button submit" type="submit" value="Decrypt" id="upload-button" />
	        </div>
	    </div>
    </fieldset>

</form>

</section>